[user]
	name = Jeffrey Horn
	email = jeff@jrhorn.me
[credential]
	helper = osxkeychain
[github]
	user = jrhorn424
[core]
	autocrlf = input
	safecrlf = false
	quotepath = false
	excludesfile = /Users/jrhorn424/.global_ignore
[pull]
	rebase = true
[push]
	default = tracking
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[alias]
	wtf     = !$HOME/bin/git-wtf
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[git-up "bundler"]
	check = true
	autoinstall = true
[git-up "rebase"]
	log-hook = "echo \"changes on $1:\"; git log --oneline --decorate $1..$2"
[merge "gemfilelock"]
  name = relocks the gemfile.lock
  driver = bundle install
[branch]
	autosetuprebase = always
