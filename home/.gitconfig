[user]
	name = Jeffrey Horn
	email = jrhorn424@gmail.com
[credential]
    helper = osxkeychain
[github]
    user = jrhorn424
[core]
    autocrlf = input
    safecrlf = false
    editor = vim
	quotepath = false
	excludesfile = /Users/jrhorn424/.global_ignore
[apply]
    whitespace = nowarn
[help]
    autocorrect = 1
[pull]
	rebase = true
[push]
    default = tracking
[sendemail]
    smtpserver = /usr/local/bin/msmtp
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[merge]
    tool = Kaleidoscope
[alias]
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg = !"git lg1"
    promote = !$HOME/bin/git-promote
    wtf     = !$HOME/bin/git-wtf
    rank-contributers = !$HOME/bin/git-rank-contributers
    count   = !git shortlog -sn
    stage="!f() { ( [ -z $@ ] && git add -A || git add -A "$@" ) && git st; }; f"
    unstage="!f() { ([ -z "$@" ] && (git reset -q HEAD > /dev/null 2>&1 || echo "first commit must be unfrozen file by file. better error message coming soon") || (git reset -q HEAD -- $@ > /dev/null 2>&1 || git rm -q --cached $@ ) ) && git st; }; f"
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[git-up "bundler"]
    check = true
    autoinstall = true
[git-up "rebase"]
    log-hook = "echo \"changes on $1:\"; git log --oneline --decorate $1..$2"
[format]
    pretty = oneline
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge "gemfilelock"]
  name = relocks the gemfile.lock
  driver = bundle install
[branch]
	autosetuprebase = always
